{% extends "ChiaBundle::layout.twig" %}

{% block content %}
    <h1>{% block title 'Status' %}</h1>
    <p>
        <a href="{{ path('status_new') }}">New</a><br>
    </p>

    <table class="status">
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
    {% for status in statuses %}
        <tr class="status-row">
            <td><strong><a href="{{ path('status_edit', {'id': status.id}) }}">{{ status.name }}</a></strong></td>
            <td>{{ status.value }}</td>
            <td>{{ status.active }}</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}
